@model List<Vet.DAL.ApplicationUser>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2>Lista de Usuarios</h2>

<div class="container">
    <div class="row">
        @foreach (var usuario in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card h-100 card1">
                    <div class="card-body">
                        <h4 class="card-title">@usuario.UserName</h4>
                        <p class="card-text">Email: @usuario.Email</p>
                        <p class="card-text">Primer Apellido: @usuario.PrimerApellido</p>
                        <p class="card-text">Segundo Apellido: @usuario.SegundoApellido</p>
                        <p class="card-text">Última Fecha de Conexión: @usuario.UltimaFechaConexion</p>
                        <p class="card-text">
                            Estado:
                            @if (usuario.Estado)
                            {
                                <span style="color: green;">Activo</span>
                            }
                            else
                            {
                                <span style="color: red;">Inactivo</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-secondary">Detalles</a>
                        <a class="btn btn-danger BorrarElemento" data-estado="@usuario.Estado" asp-action="Delete" asp-route-id="@usuario.Id">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@model Vet.DAL.Vacuna

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h2>¿Está seguro que desea eliminar esto?</h2>
    </div>

    <div class="card-body">
        <h4>Vacuna</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoVacuna)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoVacuna)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdVacuna" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary">Atrás</a>
        </form>
    </div>
</div>

@model Vet.DAL.TipoMascota

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div class="card">
    <div class="card-body">

        <div>
            <h5 class="card-title">Tipo de Mascota</h5>
            <hr />
            <dl class="row">
                <div class="card-subtitle">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
                </div>
            </dl>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model?.IdTipoMascota" class="btn btn-primary">Editar</a> |
        <a asp-action="Index" class="btn btn-outline-secondary">Atrás</a>
    </div>
</div>
@model Vet.DAL.PadecimientoMascota

@{
    ViewData["Title"] = "Create";
}
<h1>Agregar padecimiento a mascota</h1>

<hr />
<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMascota" class="control-label"></label>
                <select asp-for="IdMascota" class="form-control" asp-items="ViewBag.IdMascota"></select>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="IdPadecimiento" class="control-label"></label>
                <select asp-for="IdPadecimiento" class="form-control" asp-items="ViewBag.IdPadecimiento"></select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Añadir" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-outline-secondary">Atrás</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Vet.DAL.PadecimientoMascota

@{
    ViewData["Title"] = "Delete";
}
<div class="card">
    <div class="card-header">
        <h2>¿Está seguro que desea eliminar esto?</h2>
    </div>

    <div class="card-body">
        <div>
            <h4>Padecimiento de la Mascota</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mascota)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mascota.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Padecimiento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Padecimiento.Nombre)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdPadecimientoMascota" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-outline-secondary">Atrás</a>
            </form>
        </div>
    </div>
</div>

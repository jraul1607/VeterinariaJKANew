@model Vet.DAL.PadecimientoMascota

@{
    ViewData["Title"] = "Edit";
}
<h1>Editar padecimiento de mascota</h1>

<div class="card">
    <div class="card-body">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdPadecimientoMascota" />
                    <div class="form-group">
                        <label asp-for="IdMascota" class="control-label"></label>
                        <select asp-for="IdMascota" class="form-control" asp-items="ViewBag.IdMascota"></select>
                        <span asp-validation-for="IdMascota" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdPadecimiento" class="control-label"></label>
                        <select asp-for="IdPadecimiento" class="form-control" asp-items="ViewBag.IdPadecimiento"></select>
                        <span asp-validation-for="IdPadecimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br/>
                        <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-outline-secondary">Atrás</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Vet.DAL.CitaMedicamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Medicamento/s asignado/s a la cita de (NombreMascota)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCitaMedicamento" />
            <div class="form-group">
                <label asp-for="IdCita" class="control-label"></label>
                <select asp-for="IdCita" class="form-control" asp-items="ViewBag.IdCita"></select>
                <span asp-validation-for="IdCita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMedicamento" class="control-label"></label>
                <select asp-for="IdMedicamento" class="form-control" asp-items="ViewBag.IdMedicamento"></select>
                <span asp-validation-for="IdMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosis" class="control-label"></label>
                <input asp-for="Dosis" class="form-control" />
                <span asp-validation-for="Dosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-bottom: 20px;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

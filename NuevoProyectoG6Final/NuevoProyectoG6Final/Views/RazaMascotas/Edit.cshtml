@model Vet.DAL.RazaMascota

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar raza de mascota</h1>

<div class="card">
    <div class="card-body">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdRazaMascota" />
                    <div class="form-group">
                        <label asp-for="IdTipoMascota" class="control-label"></label>
                        <select asp-for="IdTipoMascota" class="form-control" asp-items="ViewBag.IdTipoMascota"></select>
                        <span asp-validation-for="IdTipoMascota" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                        </label>
                    </div>
                    <div class="form-group">
                        <br />
                        <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-outline-secondary">Atrás</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

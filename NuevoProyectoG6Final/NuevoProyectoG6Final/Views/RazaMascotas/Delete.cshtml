@model Vet.DAL.RazaMascota

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h2>¿Está seguro que desea eliminar esta raza de mascota?</h2>
    </div>

    <div class="card-body">
        <div>
            <h4>Raza de mascota</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TipoMascota)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoMascota.Nombre)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdTipoMascota" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-outline-secondary">Atrás</a>
            </form>
        </div>
    </div>
</div>
@model Vet.DAL.Cita

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h2>¿Estás seguro/a de cancelar esta cita?</h2>
    </div>

    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DuenoId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Dueno.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VeterinarioPrincipalId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VeterinarioPrincipalId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VeterinarioSecundarioId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VeterinarioSecundarioId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fecha)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Diagnostico)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Diagnostico)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EstadoCita)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstadoCita)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mascota)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mascota.Nombre)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCita" />
                <input type="submit" value="Cancelar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar a la lista</a>
            </form>
        </div>
    </div>
</div>

